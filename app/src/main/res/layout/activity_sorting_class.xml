<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.androidbootcamp.welcometohogwarts.SortingClass">

    <TextView
        android:id="@+id/txtSortingClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="45dp"
        tools:text="@string/txtSortingClassTitle" />

    <Button
        android:id="@+id/btnContinuePatronus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="Button"
        tools:text="@string/btnSortClassContinue" />

    <TextView
        android:id="@+id/txtSortClassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnContinuePatronus"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textAlignment="center"
        tools:text="@string/txtSortClassBtn" />
</RelativeLayout>
