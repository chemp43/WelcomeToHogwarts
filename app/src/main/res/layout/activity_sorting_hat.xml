<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/candels"
    tools:context="net.androidbootcamp.welcometohogwarts.SortingHat">

    <TextView
        android:id="@+id/txtSortingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/txtSortingTitle"
        android:textAlignment="center"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imgSortingHat"
        android:layout_width="298dp"
        android:layout_height="222dp"
        android:layout_below="@+id/txtSortingTitle"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/sortinghat"
        app:srcCompat="@drawable/sortinghat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGrif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGrif" />

        <Button
            android:id="@+id/btnSly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSly" />

        <Button
            android:id="@+id/btnRaven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnRaven" />

        <Button
            android:id="@+id/btnHuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnHuff" />
    </LinearLayout>


</RelativeLayout>
